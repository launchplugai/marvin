# Marvin — Environment Variables
# Copy to .env and fill in your values. NEVER commit .env to git.

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# VPS Configuration
VPS_API_KEY=your_vps_api_key_here
VPS_BASE_URL=https://your-vps-host.example.com/api/v1

# OpenAI API (complex work — code review, debugging, features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_CHAT_MODEL=gpt-4o-mini

# Kimi 2.5 / Moonshot (backup when OpenAI is rate limited)
KIMI_API_KEY=your_kimi_api_key_here
KIMI_MODEL=moonshot-v1-auto
KIMI_API_URL=https://api.moonshot.cn/v1/chat/completions

# Ollama (local buffer — heartbeats, status, trivial, how-to)
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2
